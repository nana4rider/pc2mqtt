  "main": "dist/index.js",
  "type": "module",
  "homepage": "https://github.com/nana4rider/pc2mqtt",
  "scripts": {
    "dev": "tsx --env-file=.env src/index.ts",
    "start": "node dist/index",
    "build": "node build.js",
    "type-check": "tsc",
    "lint": "eslint --max-warnings 0 && prettier . --check",
    "lint:fix": "eslint --fix && prettier . --write",
    "test": "vitest run",
    "prepare": "husky",
    "generate-config-schema": "tsx --env-file=.env generate-config-schema.ts"
  },
  "lint-staged": {
    "*.ts": [
