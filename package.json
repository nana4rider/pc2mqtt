  "dependencies": {
    "envalid": "^8.1.0",
    "fastify": "^5.6.1",
    "ip": "^2.0.1",
    "mqtt": "^5.14.1",
    "node-ssh": "^13.2.1",
    "ping": "^0.4.4",
    "winston": "^3.18.3",
    "wol": "^1.0.7"
  },
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@eslint/js": "^9.37.0",
    "@types/ip": "^1.1.3",
    "@types/node": "^24.6.2",
    "@types/ping": "^0.4.4",
    "@types/ssh2": "^1.15.5",
    "@types/wol": "^1.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.15",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "type-fest": "^5.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "typescript-json-schema": "^0.65.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
