    "@types/node": "^24.10.1",
    "@types/ssh2": "^1.15.5",
    "@types/wol": "^1.0.4",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint": "^9.39.1",
